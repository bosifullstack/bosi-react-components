{
  "name": "bosi-react-components",
  "private": false,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
    "format": "prettier --write src//**/*.{ts,tsx,css} --config ./.prettierrc"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/bosi-react-components.es.js",
      "require": "./dist/bosi-react-components.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "main": "./dist/bosi-react-components.umd.js",
  "module": "./dist/bosi-react-components.es.js",
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "classnames": "^2.3.2",
    "react": "16.8.0 || >=17.x || ^18.0.0",
    "react-dom": "16.8.0 || >=17.x || ^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@vitejs/plugin-react": "^3.1.0",
    "classnames": "^2.3.2",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "prettier": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "vite": "^4.2.0",
    "vite-plugin-dts": "^2.1.0",
    "vite-plugin-linter": "^2.0.2",
    "vite-tsconfig-paths": "^4.0.7"
  },
  "license": "GPL-3.0-only"
}
